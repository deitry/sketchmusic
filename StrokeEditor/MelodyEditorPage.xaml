<Page
    x:Class="StrokeEditor.MelodyEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StrokeEditor"
    xmlns:sm="using:SketchMusic"
    xmlns:sf="using:SketchMusic.SFReader"
    xmlns:smv="using:SketchMusic.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <sm:InstrumentToTextConverter x:Key="instr2text"/>
            <DataTemplate x:Key="myResourceTemplate" x:DataType="sf:SFPreset">
                <TextBlock Text="{x:Bind name}"/>
            </DataTemplate>

            <x:Double x:Key="MenuSymbolFontSize">24</x:Double>
            <x:Double x:Key="MenuFontSize">18</x:Double>
        </ResourceDictionary>
    </Page.Resources>

    <!--<Page.TopAppBar>
        <CommandBar x:Name="commandBar">
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal">
                    <Button Content="На главную"/>
                </StackPanel>
            </CommandBar.Content>
        </CommandBar>
    </Page.TopAppBar>-->

    <Grid x:Name="grid" 
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                BorderThickness="5"
                BorderBrush="Black"
                RenderTransformOrigin="0,1"
                MaxWidth="1280">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <SplitView Name="mySplitView" Grid.Row="0" OpenPaneLength="240"
                   DisplayMode="CompactOverlay" CompactPaneLength="46">
            <SplitView.Pane>
                <ListView x:Name="menu" SelectionMode="None" IsItemClickEnabled="True" ItemClick="menu_ItemClick">
                    <ContentControl Name="HamburgerButton"
                                    FontFamily="Segoe MDL2 Assets" FontSize="{StaticResource MenuSymbolFontSize}"
                                    Background="{Binding ElementName=menu, Path=Background}"
                                    Content="&#xE700;"/>

                    <ContentControl Name="homeItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="{StaticResource MenuSymbolFontSize}" FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;"/>
                            <TextBlock FontSize="{StaticResource MenuFontSize}" Name="GoBackTxt" Text="Вернуться назад" Margin="10 0 0 0"/>
                        </StackPanel>
                    </ContentControl>

                    <ContentControl Name="textsItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="{StaticResource MenuSymbolFontSize}" FontFamily="Segoe MDL2 Assets" Text="&#xE90B;" />
                            <TextBlock FontSize="{StaticResource MenuFontSize}" Text="Дорожки" Margin="10 0 0 0"
                                       Name="textsCtrl">
                                <FlyoutBase.AttachedFlyout>
                                    <Flyout x:Name="TextsFlyout">
                                        <ListView ItemsSource="{Binding}" x:Name="TextsList" SelectionChanged="ListView_SelectionChanged" Width="auto">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderThickness="1" BorderBrush="AliceBlue">
                                                        <TextBlock FontSize="14" Foreground="{ThemeResource SystemControlBackgroundBaseHighBrush}">
                                                            <Run Text="{Binding instrument, Converter={StaticResource instr2text}}"/>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Flyout>
                                </FlyoutBase.AttachedFlyout>
                            </TextBlock>
                        </StackPanel>
                    </ContentControl>

                    <ContentControl Name="addItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="{StaticResource MenuSymbolFontSize}" FontFamily="Segoe MDL2 Assets" Text="&#xE710;"/>
                            <TextBlock FontSize="{StaticResource MenuFontSize}" Text="Добавить дорожку" Margin="10 0 0 0"
                                       Name="addCtrl">
                                <FlyoutBase.AttachedFlyout>
                                    <Flyout x:Name="InstrumentsFlyout">
                                        <ListView x:Name="InstrumentList"
                                  ItemsSource="{Binding}"
                                  IsItemClickEnabled="True"
                                  SelectionMode="None"
                                  ItemClick="ListView_ItemClick"
                                  Width="auto">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderThickness="1" BorderBrush="AliceBlue">
                                                        <TextBlock FontSize="14" Foreground="{ThemeResource SystemControlBackgroundBaseHighBrush}">
                                            <Run Text="{Binding _name}"/>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Flyout>
                                </FlyoutBase.AttachedFlyout>
                            </TextBlock>
                        </StackPanel>
                    </ContentControl>

                    <ContentControl Name="deleteItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="{StaticResource MenuSymbolFontSize}" FontFamily="Segoe MDL2 Assets" Text="&#xE74D;"/>
                            <TextBlock FontSize="{StaticResource MenuFontSize}" Text="Удалить дорожку" Margin="10 0 0 0"
                                       Name="deleteCtrl">
                                <FlyoutBase.AttachedFlyout>
                                    <Flyout x:Name="DeleteTextFlyout">
                                        <StackPanel>
                                            <TextBlock Text="Удалить?"/>
                                            <Button x:Name="DeleteTextBtn" Content="Ок" Click="DeleteTextBtn_Click"/>
                                        </StackPanel>
                                    </Flyout>
                                </FlyoutBase.AttachedFlyout>
                            </TextBlock>
                        </StackPanel>
                    </ContentControl>

                    <ContentControl Name="settingsItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="{StaticResource MenuSymbolFontSize}" FontFamily="Segoe MDL2 Assets" Text="&#xE713;" />
                            <TextBlock FontSize="{StaticResource MenuFontSize}" Text="Настройки" Margin="10 0 0 0" />
                        </StackPanel>
                    </ContentControl>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"      
              BorderThickness="0"
              BorderBrush="Black" Width="950">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <smv:TextRow x:Name="_textRow"
                         BorderThickness="1"
                         BorderBrush="White"
                         Height="250"
                         HorizontalAlignment="Left"
                         Margin="5,5,5,5"
                         Grid.Row="0"/>
                    
                    <smv:GenericKeyboard x:Name="_keyboard" BorderBrush="OrangeRed"
                                 BorderThickness="1"
                                 Background="Orange"
                                 Height="400"
                                 Width="auto"
                                 VerticalAlignment="Bottom"
                                 HorizontalAlignment="Left"
                                 Grid.Row="1"/>

                    <StackPanel Orientation="Vertical"
                        VerticalAlignment="Bottom"
                        Grid.Row="2">
                        <TextBlock x:Name="CurPos">
                        Здесь будет отображаться текущая позиция курсора.
                        </TextBlock>
                        <TextBlock x:Name="BPMText">
                        Здесь будет отображаться текущее значение текста.
                        </TextBlock>
                        <!--<TextBlock x:Name="RealPos">
                        Здесь будет отображаться текущая позиция курсора.
                </TextBlock>
                <TextBlock x:Name="Version">
                        Версия 2016.12.16-17.
                </TextBlock>-->
                    </StackPanel>
                </Grid>
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>
